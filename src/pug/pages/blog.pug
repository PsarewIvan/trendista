extends ../layout.pug

block variables
    - var hasLogin = 'true'

block content
    include ../icons/icon-cross.pug
    include ../icons/icon-chevron-left.pug

    main.main
        section.section.blog
            h1.heading1 Блог
            .blog-buttons.js-blog-buttons
                button.blog-buttons__button.active(type="button") Новости
                    +icon-cross('blog-buttons__icon')
                button.blog-buttons__button(type="button") Лайфхаки
                    +icon-cross('blog-buttons__icon')
                button.blog-buttons__button(type="button") Стратегия
                    +icon-cross('blog-buttons__icon')
                button.blog-buttons__button(type="button") Маркетинг
                    +icon-cross('blog-buttons__icon')
                button.blog-buttons__button(type="button") Персонал
                    +icon-cross('blog-buttons__icon')
                button.blog-buttons__button(type="button") Законы
                    +icon-cross('blog-buttons__icon')
                button.blog-buttons__button(type="button") Финансы
                    +icon-cross('blog-buttons__icon')
            .blog__cards
                .blog-card
                    .blog-card__img-block
                        img.blog-card__img(src="img/photo1.jpg")
                    .blog-card__block
                        .blog-card__statuses
                            .blog-card__tag.blog-card__tag_news Новости
                            .blog-card__date 12 января 2025
                        .blog-card__content
                            a(href="blog-item").blog-card__title Тренды в бьюти-бизнесе: как статистика помогает адаптироваться к изменениям рынка
                            .blog-card__text Как использовать данные аналитики, чтобы оставаться впереди конкурентов и развивать свой салон в условиях перемен.
