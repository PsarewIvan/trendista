                button.pagination__button.pagination__button_left.pagination__button_disabled(type='button', disabled="true")
                    +icon-chevron-left('pagination__icon')
                button.pagination__button.pagination__button_active(type='button') 1
                button.pagination__button(type='button') 2
                button.pagination__button.mobile-none(type='button') 3
