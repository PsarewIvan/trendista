include ../icons/icon-cross.pug
include ../components/button.pug
include ../components/text-input.pug
include ../components/pass-input.pug
include ../components/checkbox.pug

mixin popup-forgot-pass()
    .popup-auth.hidden.js-popup-forgot-pass
        .popup-auth__box
            .popup-auth__header
                button.popup-auth__button.js-close-popup(type="button")
                    +icon-cross('popup-auth__icon')
            .popup-auth__content
                .popup-auth__content-title-wrapper
                    .popup-auth__content-title Забыли пароль?
                    .popup-auth__content-sub-title Введите адрес электронной почты указанные при регистрации, и мы вышлем вам пароль
                form.popup-auth__form(action="")
                    +text-input({ alert: 'Не указан email', placeholder: 'Укажите ваш email', className: 'popup-auth__form-email'})
                    img.popup-auth__captcha(src='img/captcha.png')
                    +button({text: 'Войти', size: 'l', className: 'popup-auth__apply-button'})
                .popup-auth__login
                    span Ещё нет аккаунта?
                    button.popup-auth__login-button.js-login-button(type='button') Регистрируйтесь
